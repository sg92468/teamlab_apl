<div class="card-list-container py-5">
  <% post_texts.each do |post_text| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_text_path(post_text.id) do %>
      <%= attachment_image_tag post_text, :image, size: '400', fallback: "no_image_photo.jpg", class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post_text.user, :image, size: '60x60', fallback: "no_image_person.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_text_path(post_text.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_text.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post_text.body %></p>
          <span><i class="fas fa-user"></i> By <%= post_text.user.name %> ｜ </span>
          <span>募集人数 <%= post_text.num %>人</span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate post_texts %>
</div>