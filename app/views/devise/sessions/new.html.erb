<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-10 mx-auto my-3 border p-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>ログイン</h1>
      <div class="col">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "col-12" %>
      </div>
      <div class="col">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-12" %>
      </div>
      <div class="col-12 my-3">
        <%= f.submit "ログイン", class: "btn btn-success col-12 mb-2" %>
        <div class="col mt-2">
          続行することで、Hogezonの
          <%= link_to "利用規約", "" %>
          および
          <%= link_to "プライバシー規約", "" %>
          に同意するものとみなされます。
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>
    
    <div class="box-newusr">
      <%= link_to "新規アカウントを作成", new_user_registration_path, class: "btn btn-info col-12 mb-2" %>
    </div>
    </div>
  </div>
</div>
